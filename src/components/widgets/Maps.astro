---
export interface Props {
  url: string;
  title?: string;
  width?: string;
  height?: string;
}

const { url, title = 'Kde n√°s najdete', width, height } = Astro.props;
---

<section class="relative my-8 bg-blue-100 dark:bg-dark pt-8 md:py-16">
  {title && <h2 class="text-4xl md:text-6xl font-bold text-center mb-8 md:mb-14">{title}</h2>}
  <div class="relative mx-auto max-w-5xl rounded-lg overflow-hidden shadow-lg">
    <iframe
      src={url}
      width={width}
      height={height}
      class="rounded-lg"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"></iframe>
  </div>
</section>
