---
import Layout from '~/layouts/PageLayout.astro';
import DocumentList from '~/components/widgets/DownloadFile.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import fs from 'fs';
import path from 'path';

const metadata = {
  title: 'Městské byty',
};

const directoryPath = path.resolve('./public/assets/files/mestske-byty');

const documents = fs.readdirSync(directoryPath).map((fileName) => {
  const filePath = path.join(directoryPath, fileName);
  const stats = fs.statSync(filePath);

  return {
    title: fileName,
    url: `/assets/files/mestske-byty/${fileName}`,
    date: stats.mtime,
    size: (stats.size / 1024).toFixed(2),
  };
});
---

<Layout metadata={metadata}>
  <HeroText tagline="Městské byty" title="Soubory ke stažení" />
  <DocumentList documents={documents} />
</Layout>
