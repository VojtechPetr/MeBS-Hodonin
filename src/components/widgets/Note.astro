---
import { Icon } from 'astro-icon/components';

export interface Props {
  boldText: string; 
  normalText: string; 
}

const { boldText, normalText } = Astro.props;
---

<section class="bg-yellow-100 dark:bg-slate-800 not-prose">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-2 text-md text-center font-medium">
    <span class="font-bold">
      <Icon name="tabler:info-square" class="w-5 h-5 inline-block align-text-bottom" />
      {boldText} 
    </span>
    {normalText} 
  </div>
</section>
