---
export interface Props {
  url: string;
  title?: string;
  width?: string;
  height?: string;
}

const { url, title = 'Na≈°e lokace', width, height } = Astro.props;
---

<section class="relative my-8 bg-blue-50 py-20">
  {title && <h2 class="text-2xl font-bold text-center mb-6">{title}</h2>}
  <div class="relative mx-auto max-w-5xl rounded-lg overflow-hidden shadow-lg">
    <iframe
      src={url}
      width={width}
      height={height}
      class="rounded-lg"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"></iframe>
  </div>
</section>
