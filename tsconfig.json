{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["astro/client", "./src/types.d.ts"],
  },
  "include": [ "src/**/*.ts", "src/**/*.astro" ],
  "exclude": ["dist/"]
}
