---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';

const downloadPages = [
  { title: 'BD Kaštany', url: '/ke-stazeni/bd-kastany' },
  { title: 'BD Lípa', url: '/ke-stazeni/bd-lipa' },
  { title: 'BD Pastelky', url: '/ke-stazeni/bd-pastelky' },
  { title: 'Bytová údržba', url: '/ke-stazeni/bytova-udrzba' },
  { title: 'Obecné dokumenty', url: '/ke-stazeni/obecne-doku' },
  { title: 'Pro zaměstnance', url: '/ke-stazeni/pro-zamestnance' },
  { title: 'Správa prodaných bytů', url: '/ke-stazeni/sprava-prodanych-bytu' },
  { title: 'Tepelné hospodářství', url: '/ke-stazeni/tepelne-hospodarstvi' },
];

const metadata = {
  title: 'Ke stažení',
};
---

<Layout metadata={metadata}>
  <HeroText tagline="Ke stažení" title="Seznam oddělení" />

  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <ul class="space-y-4">
      {
        downloadPages.map((page) => (
          <li class="p-4 border rounded-lg shadow-sm flex justify-between items-center hover:bg-blue-200 dark:hover:bg-blue-900 transition duration-300 ease-in-out">
            <div>
              <h3 class="text-lg font-semibold">{page.title}</h3>
            </div>
            <a href={page.url} class="bg-blue-600 text-white px-4 py-2 rounded-md">
              Zobrazit
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
