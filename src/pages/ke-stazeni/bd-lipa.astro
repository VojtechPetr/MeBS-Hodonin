---
import Layout from '~/layouts/PageLayout.astro';
import DocumentList from '~/components/widgets/DownloadFile.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import fs from 'fs';
import path from 'path';
import type { DocumentData } from '~/types';
import matter from 'gray-matter';

const metadata = {
  title: 'Bytové družstvo Lípa',
};

//const filePath = path.resolve('src/content/ke-stazeni/dokumenty-bd-lípa.md');
const filePath = path.resolve('public/assets/files/bd-lipa/dokumenty-bd-lípa.md');

const rawMarkdown = fs.readFileSync(filePath, 'utf-8');
const parsedMarkdown = matter(rawMarkdown);

const typedFileData = parsedMarkdown.data as unknown as DocumentData;

const directoryPath = path.resolve('./public/assets/files/bd-lipa');

const documents = typedFileData.soubory.map((file) => {
  const filePath = path.join(directoryPath, file.file);
  const stats = fs.existsSync(filePath) ? fs.statSync(filePath) : { size: 0 };

  return {
    title: file.file,
    url: `/assets/files/bd-lipa/${file.file}`,
    date: file.uploadDate,
    size: (stats.size / 1024).toFixed(2),
  };
});
---

<Layout metadata={metadata}>
  <HeroText tagline="Bytové družstvo Lípa" title="Soubory ke stažení" />
  <DocumentList documents={documents} />
</Layout>
